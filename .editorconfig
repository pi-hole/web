# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2

[scripts/**.js]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
